<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">
    
    <!-- Local repository is set via volume mount to /home/vscode/.m2/repository -->
    
    <!-- Profiles for common development needs -->
    <profiles>
        <!-- Profile for TestContainers optimization -->
        <profile>
            <id>testcontainers</id>
            <properties>
                <testcontainers.reuse.enable>true</testcontainers.reuse.enable>
                <testcontainers.docker.client.strategy>org.testcontainers.dockerclient.UnixSocketClientProviderStrategy</testcontainers.docker.client.strategy>
            </properties>
        </profile>
    </profiles>
    
    <!-- Active profiles -->
    <activeProfiles>
        <activeProfile>testcontainers</activeProfile>
    </activeProfiles>
    
